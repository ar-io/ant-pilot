{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "importHelpers": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["jest"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*.ts", "./globals.d.ts"],
  "exclude": ["node_modules", "tests", "./src/*.js", "schemas/**/*"]
}
